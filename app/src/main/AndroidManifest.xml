<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wierzba.james.liftlog" >

    <uses-sdk android:minSdkVersion="11" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" /> <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <!-- <android:uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.liftlog.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liftlog.ViewLift"
            android:label="@string/title_activity_add_lift"
            android:parentActivityName="com.liftlog.ViewSession" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.liftlog.MainActivity" />
        </activity>
        <activity
            android:name="com.liftlog.BrowseSessions"
            android:label="@string/title_activity_browse_sessions" >
        </activity>
        <activity
            android:name="com.liftlog.ViewSession"
            android:label="@string/title_activity_view_session"
            android:launchMode="singleTop"
            android:parentActivityName="com.liftlog.BrowseSessions" >
        </activity>
        <activity
            android:name="com.liftlog.BrowseExercises"
            android:label="@string/title_activity_browse_exercises"
            android:parentActivityName="com.liftlog.MainActivity" >
        </activity>
        <activity
            android:name="com.liftlog.MainActivityTabbed"
            android:label="@string/title_activity_main_activity_tabbed" >
        </activity>
    </application>

</manifest>
