<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context="com.liftlog.ViewLiftActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="New Exercise"-->
            <!--android:onClick="doNewExercise"-->
            <!--android:id="@+id/btn_add_exercise"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_exercise"/>

        <Spinner
            android:id="@+id/spn_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="View Exercise History"
            android:onClick="doSave"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/btn_view_history"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

        </Button>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            />

        <EditText
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_weight"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="1"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp"
            />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Sets"-->
            <!--android:layout_row="0"-->
            <!--android:layout_column="1"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:paddingLeft="10dp"-->
            <!--/>-->



        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pck_reps"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp"
            />

        <!--<NumberPicker-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/pck_sets"-->
            <!--android:layout_row="1"-->
            <!--android:layout_column="1"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:paddingLeft="10dp"-->
            <!--/>-->
    </GridLayout>

    <LinearLayout
        android:id="@+id/layout_rpe"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/lbl_rpe"
            android:text="RPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <Spinner
            android:id="@+id/spn_rpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="Save"
            android:onClick="doSave"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/btn_save"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="Cancel"
            android:onClick="doCancel"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/btn_cancel"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="Delete"
            android:onClick="doDelete"
            android:layout_weight="1"
            android:id="@+id/btn_delete"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

    </LinearLayout>


</LinearLayout>
