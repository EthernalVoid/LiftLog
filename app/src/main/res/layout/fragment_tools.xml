<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.liftlog.ToolsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_view_history"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="View Exercise History"
            android:textSize="20dp"
            android:background="@drawable/round_button"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_find_best_lifts"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="Find Personal Best"
            android:textSize="20dp"
            android:background="@drawable/round_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_1rm_calc"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="1-Rep Max Calculator"
            android:textSize="20dp"
            android:background="@drawable/round_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_wilks_calc"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="Wilks Calculator"
            android:textSize="20dp"
            android:background="@drawable/round_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_backup"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="Data Backup"
            android:textSize="20dp"
            android:background="@drawable/round_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>


</FrameLayout>
